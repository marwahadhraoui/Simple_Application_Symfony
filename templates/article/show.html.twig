{% extends 'base.html.twig' %}

{% block title %}Hello ArticleController!{% endblock %}

{% block body %}
<div style="padding:25px">
    <section class="article">
        <article>

            <h2>{{article.title}}</h2>
            <div class="metadata">Ecrit le {{article.createdAt | date('d/m/Y')}} à {{article.createdAt | date('H:i')}} dans la catégorie politique</div>

            <img  src="{{article.image}}" alt="Card image cap"  >
            
            <p>{{article.content}}</p>
            <a href="{{path('edit_article',{'id': article.id})}}" class="btn btn-primary"> Edit</a>
            <a href="{{path('delete_article',{'id': article.id})}}" class="btn btn-primary"> Delete</a>
        </article>
    </section>
</div>
{% endblock %}
