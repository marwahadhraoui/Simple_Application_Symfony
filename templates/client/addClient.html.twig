{% extends 'base.html.twig' %}

{% block body %}
<div class="container" style="margin-top:50px">
  
<section class="panel panel-default">
<div class="panel-heading"> 
<h3 class="panel-title" style="text-align:center">Add a new Client</h3> 
</div> 
<div class="panel-body">
  
<form action="{{path('add_client')}}" methode="POST" >


   <div class="form-group">
    <label for="name" class="col-sm-3 control-label">Name</label>
    <div class="col-sm-9">
      <input type="text" class="form-control" name="nom" id="nom" placeholder="name of the client" required>
    </div>
  </div> 
  <div class="form-group">
    <label for="url" class="col-sm-3 control-label">Last Name</label>
    <div class="col-sm-9">
      <input type="text" class="form-control" name="prenom" id="prenom" placeholder="last name of the client" required>
    </div>
  </div> 

  <div class="form-group">
    <label for="url" class="col-sm-3 control-label">Choose an application</label>
      <div class="col-sm-9">
        <select name="app" id="app">
            <option value="">Choose an application</option>
            {% for app in applications %}
            <option name="app_name" id="app_name" value="{{app.id}}">{{app.nom}}</option>
            {% endfor %}

        </select>
      </div>
  </div> 
  <hr>
  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-9">
      <button type="submit" class="btn btn-primary">ADD</button>
    </div>
  </div> 
</form>
  
</div><!-- panel-body // -->
</section><!-- panel// -->

  
</div> <!-- container// -->

{% endblock %}