{% extends 'base.html.twig' %}

{% block body %}
<div class="container" style="margin-top:50px">
  
<section class="panel panel-default">
<div class="panel-heading"> 
<h3 class="panel-title" style="text-align:center">Update Client</h3> 
</div> 
<div class="panel-body">
  
<form action="{{path('update_client')}}" methode="POST" >

<input type="text" class="form-control" name="id" id="id" value="{{id}}" hidden>

   <div class="form-group">
    <label for="name" class="col-sm-3 control-label">Name</label>
    <div class="col-sm-9">
      <input type="text" class="form-control" name="nom" id="nom" value="{{name}}" required>
    </div>
  </div> 
  <div class="form-group">
    <label for="url" class="col-sm-3 control-label">Last Name</label>
    <div class="col-sm-9">
      <input type="text" class="form-control" name="prenom" id="prenom" value="{{lastname}}" required>
    </div>
  </div> 
  <div class="form-group">
    <label for="url" class="col-sm-3 control-label">Choose an application</label>
      <div class="col-sm-9">
        <select name="app" id="app">
          <option value="">Choose an application</option>
            {% for app in applications %}
            <option name="app_name" id="app_name" value="{{app.id}}">{{app.nom}}</option>
            {% endfor %}

        </select>
      </div>
  </div> 
  <hr>
  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-9">
      <button type="submit" class="btn btn-primary">UPDATE</button>
    </div>
  </div> 
</form>
  
</div><!-- panel-body // -->
</section><!-- panel// -->

  
</div> <!-- container// -->

{% endblock %}